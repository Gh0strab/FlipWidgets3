<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.BIND_APPWIDGET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <queries>
        <intent>
            <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
        </intent>
    </queries>

    <application
        android:name=".FlipCoverWidgetsApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.FlipCoverWidgets">

        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.FlipCoverWidgets">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.WidgetConfigActivity"
            android:exported="false"
            android:theme="@style/Theme.FlipCoverWidgets" />

        <activity
            android:name=".ui.WidgetSelectorActivity"
            android:exported="false"
            android:theme="@style/Theme.FlipCoverWidgets" />

        <receiver
            android:name=".widget.FlipCoverWidgetProvider1"
            android:enabled="true"
            android:exported="true"
            android:label="FlipCoverWidget Slot 1">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/flip_cover_widget_info_slot1" />
            <meta-data
                android:name="com.samsung.android.appwidget.provider"
                android:resource="@xml/samsung_flip_cover_widget_info" />
            <meta-data
                android:name="com.samsung.android.sdk.subscreen.widget.support_visibility_callback"
                android:value="true" />
        </receiver>

        <receiver
            android:name=".widget.FlipCoverWidgetProvider2"
